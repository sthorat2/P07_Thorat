                <TextView
                    android:layout_height="25dp"
                    android:layout_width="80dp"
                    android:layout_marginLeft="10dp"
                    android:text="+15"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:id="@+id/name_item8"
                    android:textStyle="bold"
                    android:gravity="center"/>
