                            android:textColor="#000"
                            android:textSize="19sp"
                            android:id="@+id/n1"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="25dp"
                            android:layout_width="80dp"
                            android:layout_marginLeft="10dp"
                            android:text="Model"
                            android:textColor="#000"
                            android:textSize="19sp"
                            android:id="@+id/namedf"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:layout_height="25dp"
                            android:layout_width="80dp"
                            android:layout_marginLeft="10dp"
                            android:text="Ptime"
                            android:textColor="#000"
